<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/textViewPokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Pokémon!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp"/>

    <Button
        android:id="@+id/btnCharmander"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charmander"/>

    <Button
        android:id="@+id/btnBulbasaur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bulbasaur"/>

    <Button
        android:id="@+id/btnSquirtle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Squirtle"/>

    <Button
        android:id="@+id/btnRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Pokémon"/>

</LinearLayout>
