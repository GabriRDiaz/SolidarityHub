<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.registrarDesaparecido.RegistrarDesaparecidoFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:paddingLeft="40dp"
        android:text="Registrar Desaparecido"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="325dp"
        android:layout_height="597dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etiquetaTitulo">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:paddingVertical="-20dp"
            android:paddingTop="-20dp">

            <LinearLayout
                android:layout_width="282dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Desparecido"
                    android:textColor="#353535"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputNombreDesaparecido"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    app:errorEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="174dp"
                        android:layout_height="wrap_content"
                        android:hint="p.e: Ignacio" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:gravity="center|left"
            android:paddingVertical="-50dp"
            android:paddingTop="-20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellidos"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputApellidosDesaparecido"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="272dp"
                        android:layout_height="match_parent"
                        android:hint="p.e: Pascual Utiel" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:gravity="center|left">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edad"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputEdadDesaparecido"
                        android:layout_width="83dp"
                        android:layout_height="55dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:hint="nch@gmail.com"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Altura (Aprox)"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputAlturaDesaparecido"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:hint="nch@gmail.com"
                            android:inputType="number|numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="114dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complexión"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerComplexionDesaparecido"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="12dp" />

                </LinearLayout>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center|left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sexo"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroupSexo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton4"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hombre" />

                    <RadioButton
                        android:id="@+id/radioButton8"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mujer" />

                    <RadioButton
                        android:id="@+id/radioButton9"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Otro" />

                </RadioGroup>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center|left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visto por última vez (Opcional)"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/botonMapaDesaparecido"
                    android:layout_width="74dp"
                    android:layout_height="34dp"
                    android:text="Mapa"
                    android:textSize="10sp" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/botonConfirmarDesaparecido"
                    android:layout_width="158dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1"
                    android:text="Confirmar" />

                <Button
                    android:id="@+id/botonCancelarDesaparecido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#C70505"
                    android:shadowColor="#BD1010"
                    android:text="Cancelar"
                    android:textColor="#D00606"
                    android:textColorHighlight="#AB1414"
                    android:textColorHint="#C70D0D"
                    android:textColorLink="#AB1E1E"
                    app:rippleColor="#B60A0A"
                    app:strokeColor="#E40808" />
            </LinearLayout>

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>